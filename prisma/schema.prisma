datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    username String @unique
    password String
}

model Task {
    id          String  @id @default(uuid())
    done        Boolean @default(false)
    name        String
    description String
}
